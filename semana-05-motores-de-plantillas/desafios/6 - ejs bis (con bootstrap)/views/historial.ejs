<h2 style="color:crimson;">Historial</h2>

<% const hayPersonas=personas.length> 0; %>
    <% if(hayPersonas){ %>

        <div class="table-responsive">
            <table class="table table-dark">
                <tr style="color: yellow;">
                    <th>Nombre</th>
                    <th>Apellido</th>
                    <th>Edad</th>
                </tr>
                <% for (const persona of personas) {%>
                    <tr>
                        <td>
                            <%=persona.nombre%>
                        </td>
                        <td>
                            <%=persona.apellido%>
                        </td>
                        <td>
                            <%=persona.edad%>
                        </td>
                    </tr>
                    <%};%>
            </table>
        </div>
        <% } else{ %>
            <h3 class="alert alert-danger">no se encontraron datos</h3>
            <% } %>